{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON-RPC Request",
  "description": "A JSON-RPC 2.0 request.",
  "type": "object",
  "required": ["jsonrpc", "method"],
  "properties": {
    "jsonrpc": { "type": "string", "enum": ["2.0"] },
    "method": { "type": "string" },
    "id": { "type": ["number", "string"] },
    "params": { "type": ["array", "object"] }
  }
}
